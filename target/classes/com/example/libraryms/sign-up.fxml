<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="445.0" prefWidth="477.0" style="-fx-background-color: #4a90e2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryms.controllers.SignUpController">
    <!-- Container for the signup form -->
    <VBox alignment="CENTER" layoutX="50" layoutY="30" spacing="20">
        <!-- Title -->
        <Label text="Library Management System" textFill="white">
            <font>
                <Font name="Arial Black" size="24" />
            </font>
        </Label>

        <!-- Subtitle -->
        <Label text="Register a Staff" textFill="lightgray">
            <font>
                <Font name="Arial" size="16" />
            </font>
        </Label>

        <!-- Form Fields -->
        <VBox alignment="CENTER" spacing="15">
            <TextField fx:id="fullNameField" promptText="Full Name" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;" />

            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;" />

            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;" />

            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;" />

            <!-- Sign Up Button -->
            <Button fx:id="signUpButton" onAction="#handleSignUp" onMouseClicked="#handleSignUp" style="-fx-background-color: white; -fx-text-fill: #4a90e2; -fx-font-weight: bold; -fx-background-radius: 10;" text="Sign Up">
                <font>
                    <Font size="14" />
                </font>
            </Button>

            <!-- Success Label -->
            <Label fx:id="successLabel" textFill="lightgray" />
        </VBox>
    </VBox>
</AnchorPane>
